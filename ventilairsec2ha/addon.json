{
  "name": "Ventilairsec2HA",
  "version": "0.1.0",
  "slug": "ventilairsec2ha",
  "description": "Intégration EnOcean pour VMI (Ventilation Mécanique Contrôlée) via MQTT dans Home Assistant",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "url": "https://github.com/ricolaflo88/Ventilairsec2HA",
  "startup": "application",
  "boot": "auto",
  "ports": {
    "8080/tcp": "Interface Web"
  },
  "ports_description": {
    "8080/tcp": "Port pour l'interface web du dashboard"
  },
  "options": {
    "mqtt_host": "localhost",
    "mqtt_port": 1883,
    "mqtt_username": "",
    "mqtt_password": "",
    "mqtt_retain": true,
    "connection_mode": "auto",
    "serial_port": "auto",
    "log_level": "INFO"
  },
  "schema": {
    "mqtt_host": "str",
    "mqtt_port": "port",
    "mqtt_username": "str?",
    "mqtt_password": "password?",
    "mqtt_retain": "bool",
    "connection_mode": "list(auto|gpio|usb)",
    "serial_port": "str",
    "log_level": "list(DEBUG|INFO|WARNING|ERROR)"
  },
  "environment": {
    "LOG_LEVEL": "INFO"
  },
  "privileged": ["SYS_ADMIN"],
  "devices": ["/dev/ttyUSB0:/dev/ttyUSB0", "/dev/ttyAMA0:/dev/ttyAMA0"],
  "map": ["config"],
  "homeassistant_api": true,
  "homeassistant": {
    "api": true
  }
}
